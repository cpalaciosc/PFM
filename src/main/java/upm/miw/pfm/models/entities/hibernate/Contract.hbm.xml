<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="upm.miw.pfm.models.entities.Contract" table="CONTRACT">
        <meta attribute="class-description">
            This class contains the project detail.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native" />
        </id>
        <property name="contractType" column="contractType" not-null="true">
        <type name="org.hibernate.type.EnumType">
         <param name="enumClass">upm.miw.pfm.utils.ContractType</param>
      </type>
    </property>
        <property name="insurance" column="insurance" type="double" />
    </class>
</hibernate-mapping>